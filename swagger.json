{
  "openapi": "3.0.0",
  "info": {
    "title": "Project",
    "description": "Documentation from products to Project API",
    "version": "1.0.0"
  },
  "basePath": "/",
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  },
  "paths": {
    "/api/questions": {
      "get": {
        "tags": ["Questions"],
        "description": "Returns all questions.",
        "responses": {
          "200": {          
            "description": "A list of questions.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array"
                }
              }
            }
          }
        }
      }
    },
    "/api/questions/{id}": {
      "get": {
        "tags": ["Questions"],
        "description": "Returns question based on ID",
        "summary": "Find question by ID",
        "operationId": "getQuestionById",
        "responses": {
          "200": {
            "description": "question response",
            "content": {
              "*/*": {
                "schema": {
                  "type": "array"
                }
              }
            }
          }
        }
      },
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "description": "ID of question to use",
          "required": true,
          "schema": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "style": "simple"
        }
      ]
    },
    "/api/clients": {
      "get": {
        "tags": ["Clients"],
        "description": "Returns all clients.",
        "responses": {
          "200": {          
            "description": "A list of clients.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array"
                }
              }
            }
          }
        }
      }
    },
    "/api/clients/{id}": {
      "get": {
        "tags": ["Clients"],
        "description": "Returns client based on ID",
        "summary": "Find client by ID",
        "operationId": "getClientById",
        "responses": {
          "200": {
            "description": "Client response",
            "content": {
              "*/*": {
                "schema": {
                  "type": "array"
                }
              }
            }
          }
        }
      },
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "description": "ID of client to use",
          "required": true,
          "schema": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "style": "simple"
        }
      ]
    }
  }
}