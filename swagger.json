{
  "openapi": "3.0.0",
  "info": {
    "title": "Project",
    "description": "Documentation from products to Project API",
    "version": "1.0.0"
  },
  "basePath": "/",
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  },
  "paths": {
    "/api/token": {
      "get": {
        "tags": ["Auth"],
        "description": "Return token.",
        "responses": {
          "200": {          
            "description": "List a token.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/api/questions": {
      "get": {
        "tags": ["Questions"],
        "description": "Returns all questions.",
        "responses": {
          "200": {          
            "description": "A list of questions.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array"
                }
              }
            }
          }
        }
      }
    },
    "/api/questions/{id}": {
      "get": {
        "tags": ["Questions"],
        "description": "Returns question based on ID",
        "summary": "Find question by ID",
        "operationId": "getQuestionById",
        "responses": {
          "200": {
            "description": "question response",
            "content": {
              "*/*": {
                "schema": {
                  "type": "array"
                }
              }
            }
          }
        }
      },
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "description": "ID of question to use",
          "required": true,
          "schema": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "style": "simple"
        }
      ]
    },
    "/api/clients": {
      "get": {
        "tags": ["Clients"],
        "description": "Returns all clients.",
        "responses": {
          "200": {          
            "description": "A list of clients.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array"
                }
              }
            }
          }
        }
      }
    },
    "/api/clients/{id}": {
      "get": {
        "tags": ["Clients"],
        "description": "Returns client based on ID",
        "summary": "Find client by ID",
        "operationId": "getClientById",
        "responses": {
          "200": {
            "description": "Client response",
            "content": {
              "*/*": {
                "schema": {
                  "type": "array"
                }
              }
            }
          }
        }
      },
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "description": "ID of client to use",
          "required": true,
          "schema": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "style": "simple"
        }
      ]
    },
    "/api/clients/new": {
      "post": {
        "tags": ["Clients"],
        "summary": "Create client ",
        "description":"Create a new client.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "$ref": "#/definitions/Clients"
                },
                "example": {
                  "name": "Example test",
                  "token": "ExampleTokenJWT",
                  "password": "*************",
                  "url": "https://mywebsite.com.br/",
                  "email": "myemail@email.com",
                  "cnpj": "000.000.000/000-00"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  },
                  "example": {
                    "message": "Created"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "definitions": {
    "Clients": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "token": {
          "type": "string"
        },
        "password": {
          "type": "string"
        },
        "url": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "cnpj": {
          "type": "string"
        }
      }
    }
  }
}